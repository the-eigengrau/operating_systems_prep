{
  "name": "GIOS Prep (x86)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--platform=linux/amd64" 
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  },
  "remoteUser": "root"
}
